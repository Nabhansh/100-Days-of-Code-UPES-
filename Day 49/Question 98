// Q98: Print initials of a name with the surname displayed in full.

#include <stdio.h>
#include <string.h>

int main() {
    char str[100], surname[50];
    fgets(str, sizeof(str), stdin);

    // Remove trailing newline if present
    str[strcspn(str, "\n")] = '\0';

    int len = strlen(str);
    int lastSpace = -1;

    // Find the position of the last space (to locate the surname)
    for (int i = len - 1; i >= 0; i--) {
        if (str[i] == ' ') {
            lastSpace = i;
            break;
        }
    }

    // Print initials (characters after spaces, before last space)
    if (str[0] != ' ')
        printf("%c.", str[0]);

    for (int i = 0; i < lastSpace; i++) {
        if (str[i] == ' ' && str[i + 1] != ' ' && i + 1 < lastSpace)
            printf("%c.", str[i + 1]);
    }

    // Print surname in full
    if (lastSpace != -1)
        printf(" %s", &str[lastSpace + 1]);

    return 0;
}
