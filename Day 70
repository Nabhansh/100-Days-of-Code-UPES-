//Q120: Write a program to take a string input. Change it to sentence case.

#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    char str[200];
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin); // Read full line including spaces

    int n = strlen(str);
    int capitalizeNext = 1; // Flag to check if next char should be capitalized

    for (int i = 0; i < n; i++) {
        if (capitalizeNext && isalpha(str[i])) {
            str[i] = toupper(str[i]);
            capitalizeNext = 0;
        } 
        else {
            str[i] = tolower(str[i]);
        }

        // If space or punctuation, next letter should be capitalized
        if (str[i] == ' ' || str[i] == '\t')
            capitalizeNext = 1;
    }

    printf("%s", str);
    return 0;
}
