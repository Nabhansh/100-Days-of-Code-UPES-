//Q146: Create Employee structure with nested Date structure for joining date and print details.

#include <stdio.h>

struct Date {
    int day;
    int month;
    int year;
};

struct Employee {
    char name[50];
    int id;
    struct Date join_date;
};

int main() {
    struct Employee e;

    // Input
    scanf("%s %d %d %d %d",
          e.name,
          &e.id,
          &e.join_date.day,
          &e.join_date.month,
          &e.join_date.year);

    // Output
    printf("Name: %s | ID: %d | Joining Date: %02d/%02d/%04d\n",
           e.name,
           e.id,
           e.join_date.day,
           e.join_date.month,
           e.join_date.year);

    return 0;
}
